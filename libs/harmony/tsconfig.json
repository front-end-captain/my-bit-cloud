{
  "compilerOptions": {
    "lib": [
      "es2019",
      "DOM",
      "ES6",
      "DOM.Iterable"
    ],
    "target": "es2015",
    "module": "CommonJS",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist"
  ]
}